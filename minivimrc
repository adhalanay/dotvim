set nocompatible

"set rtp+=~/.vim/bundle/<bundlename>

filetype plugin indent on
syntax enable
set keywordprg=":help"
set autoindent
set backspace=indent,eol,start
set ttimeout
set expandtab
set ttimeoutlen=50
set laststatus=2

inoremap jk     <esc>
nnoremap <c-u>  :bd<cr>
nnoremap gb     :bnext<cr>
nnoremap gB     :bprevious<cr>
map \ev :e ~/.vim/minivimrc<cr>
map \sv :source $MYVIMRC<cr>
