#
# Personal tex snippets
#

snippet r "\\ref{}" !w
\\$1ref{$2} $0
endsnippet

snippet e "\\emph{}" !w
\\emph{${1:${VISUAL}}}$0
endsnippet

snippet "b(egin)?" "begin{} / end{}" !br
\begin{$1}${2:{$3}}
	${4:${VISUAL}}
\end{$1}$0
endsnippet

snippet sec "Section" !b
\section{${1:section name}}
\label{sec:${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\L$1$2$3\E)/g}}}
$0
endsnippet

